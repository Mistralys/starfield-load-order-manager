<Window x:Class="StarfieldLoadOrderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarfieldLoadOrderManager"
        mc:Ignorable="d"
        Title="{Binding TLTitle}" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="{Binding TLMenuFile}" Name="MenuFile">
                <MenuItem Header="{Binding TLMenuExit}" Name="MenuExit" Click="MenuExit_Click"/>
            </MenuItem>
            <MenuItem Header="{Binding TLMenuEdit}" Name="MenuEdit">
                <MenuItem Header="{Binding TLMenuConfiguration}" Name="MenuConfiguration"/>
            </MenuItem>
            <MenuItem Header="{Binding TLMenuHelp}" Name="MenuHelp">
                <MenuItem Header="{Binding TLMenuAbout}" Name="MenuAbout"/>
            </MenuItem>
        </Menu>
    </Grid>

</Window>
