<Window x:Class="LoadOrderKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Starfield Load Order Keeper"
        Height="320"
        Width="520"
        MinWidth="480"
        MinHeight="280"
        Style="{StaticResource MaterialDesignDefaultWindowStyle}"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top"
              Background="{DynamicResource MaterialDesignPaper}"
              Foreground="{DynamicResource MaterialDesignBody}">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit"
                          Command="{Binding ExitApplicationCommand}" />
            </MenuItem>
            <MenuItem Header="_Settings..."
                      Command="{Binding OpenSettingsCommand}" />
        </Menu>

        <Border Margin="16"
                Padding="16"
                CornerRadius="6"
                Background="{DynamicResource MaterialDesignCardBackground}">
            <StackPanel>
                <StackPanel Margin="0,0,0,12">
                    <TextBlock FontWeight="Bold"
                               Text="Current Plugins.txt target:" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Target: " />
                        <Run Text="{Binding Config.StarfieldAppDataPath}" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,12">
                    <Button Content="{Binding ReferenceButtonText}"
                            Width="150"
                            Margin="0,0,8,0"
                            Command="{Binding CreateReferenceCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button Content="Fix Load Order"
                            Width="150"
                            Command="{Binding FixLoadOrderCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                </StackPanel>

                <ProgressBar Height="18"
                             Margin="0,0,0,12"
                             IsIndeterminate="{Binding IsBusy}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Border Background="{DynamicResource MaterialDesignPaper}"
                        Padding="8"
                        CornerRadius="4">
                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding StatusMessage}" />
                </Border>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
