<Window x:Class="LoadOrderKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Starfield Load Order Keeper"
        Height="320"
        Width="520"
        MinWidth="480"
        MinHeight="280"
        Style="{StaticResource MaterialDesignDefaultWindowStyle}"
        Background="{DynamicResource MaterialDesignPaper}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top"
              Background="{DynamicResource MaterialDesignPaper}"
              Foreground="{DynamicResource MaterialDesignBody}">
            <MenuItem Header="_File">
                <MenuItem Header="Open _Plugins.txt"
                          Command="{Binding OpenPluginsFileCommand}" />
                <MenuItem Header="Open _Reference File"
                          Command="{Binding OpenReferenceFileCommand}" />
                <Separator />
                <MenuItem Header="Open _AppData Folder"
                          Command="{Binding OpenAppDataFolderCommand}" />
                <MenuItem Header="Open _Game Folder"
                          Command="{Binding OpenGameFolderCommand}" />
                <Separator />
                <MenuItem Header="E_xit"
                          Command="{Binding ExitApplicationCommand}" />
            </MenuItem>
            <MenuItem Header="_Settings..."
                      Command="{Binding OpenSettingsCommand}" />
        </Menu>

        <Border Margin="16"
                Padding="16"
                CornerRadius="6"
                Background="{DynamicResource MaterialDesignCardBackground}">
            <StackPanel>
                <StackPanel Margin="0,0,0,12">
                    <TextBlock FontWeight="Bold"
                               Text="Current Plugins.txt target:"
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    <TextBlock TextWrapping="Wrap"
                               Foreground="{DynamicResource MaterialDesignBodyLight}">
                        <Run Text="Target: " />
                        <Run Text="{Binding Config.StarfieldAppDataPath}" />
                    </TextBlock>
                </StackPanel>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Content="Fix Load Order"
                            Margin="0,0,8,0"
                            Command="{Binding FixLoadOrderCommand}"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                    <Button Grid.Column="1"
                            Content="{Binding ReferenceButtonText}"
                            Margin="8,0,0,0"
                            Command="{Binding CreateReferenceCommand}"
                            HorizontalAlignment="Stretch"
                            Style="{StaticResource MaterialDesignRaisedButton}" />
                </Grid>

                <ProgressBar Height="18"
                             Margin="0,0,0,12"
                             IsIndeterminate="{Binding IsBusy}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Border Background="{DynamicResource MaterialDesignPaper}"
                        Padding="8"
                        CornerRadius="4">
                    <TextBlock TextWrapping="Wrap"
                               Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}" />
                </Border>
                <TextBlock Margin="0,8,0,0"
                           Text="Plugins.txt was modified outside Load Order Keeper."
                           Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"
                           Visibility="{Binding PluginsFileChangedExternally, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
