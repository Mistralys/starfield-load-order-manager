<Window x:Class="LoadOrderKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Starfield Load Order Keeper" Height="320" Width="520" MinWidth="480" MinHeight="280">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Command="{Binding ExitApplicationCommand}" />
            </MenuItem>
            <MenuItem Header="_Settings..." Command="{Binding OpenSettingsCommand}" />
        </Menu>

        <Border Margin="16">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <StackPanel Margin="0,0,0,12">
                    <TextBlock FontWeight="Bold" Text="Current Plugins.txt target:" />
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Target: " />
                        <Run Text="{Binding Config.StarfieldAppDataPath}" />
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
                    <Button Content="{Binding ReferenceButtonText}" Width="150" Command="{Binding CreateReferenceCommand}" Margin="0,0,8,0" />
                    <Button Content="Fix Load Order" Width="150" Command="{Binding FixLoadOrderCommand}" />
                </StackPanel>

                <ProgressBar Height="18" Margin="0,0,0,12"
                             IsIndeterminate="{Binding IsBusy}"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <Border Background="#FFEFEFEF" Padding="8" CornerRadius="4">
                    <TextBlock TextWrapping="Wrap" Text="{Binding StatusMessage}" />
                </Border>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
