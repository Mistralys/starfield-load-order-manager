<Window x:Class="LoadOrderKeeper.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Load Order Keeper Settings"
        Height="220"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignDefaultWindowStyle}"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,0,8,8"
                 MinWidth="360"
                 Text="{Binding StarfieldAppDataPath, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Starfield AppData Path"
                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="Browse..."
                Width="90"
                Margin="0,0,0,8"
                Command="{Binding BrowseAppDataCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        <TextBox Grid.Row="3"
                 Grid.Column="0"
                 Margin="0,0,8,8"
                 Text="{Binding StarfieldGamePath, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Starfield Game Path"
                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="Browse..."
                Width="90"
                Margin="0,0,0,8"
                Command="{Binding BrowseGamePathCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}" />

        <StackPanel Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Content="Save"
                    Width="100"
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>
