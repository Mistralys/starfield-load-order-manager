<Window x:Class="LoadOrderKeeper.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Load Order Keeper Settings"
        Height="220" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,12,8" VerticalAlignment="Center" Text="Starfield AppData Path:" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,8,8" MinWidth="360"
                 Text="{Binding StarfieldAppDataPath, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Width="90" Margin="0,0,0,8"
                Command="{Binding BrowseAppDataCommand}" />

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,12,8" VerticalAlignment="Center" Text="Starfield Game Path:" />
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,8,8"
                 Text="{Binding StarfieldGamePath, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Width="90" Margin="0,0,0,8"
                Command="{Binding BrowseGamePathCommand}" />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" >
            <Button Content="Save" Width="100" Command="{Binding SaveSettingsCommand}" />
        </StackPanel>
    </Grid>
</Window>
